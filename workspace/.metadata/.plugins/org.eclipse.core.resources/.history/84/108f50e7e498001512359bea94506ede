import java.util.Scanner;

public class Huffman
{
	private Tree tree = new Tree();
	private IStack<Integer> stack = new StackLL<Integer>();
	private IStack<String> stack2 = new StackLL<String>();
	
	public Huffman()
	{
		System.out.println("Preorder Traversal");
		preorder(tree.root);
		
		System.out.println("\n\n\nInorder Traversal");
		inorderCode(tree.root);
		
		
		Scanner keys = new Scanner(System.in);
		System.out.println("\n\nEnter a string of binary digits: ");
		String input = keys.next();
		System.out.println(findNode(input).toString());
		keys.close();
	}
	
	public static void main(String[] args)
	{
		new Huffman();
	}
	
	
	public void preorder(Node n)
	{
		if(n != null)
		{
			System.out.println(n);
			preorder(n.leftChild);
			preorder(n.rightChild);
		}
	}
	
	public void inorderCode(Node n)
	{
		if(n.leftChild != null)
		{
			inorderCode(n.leftChild);
		}
		
		if(n.name.length() == 1)
		{
			getNode(n);
			System.out.print(n);
			System.out.print(stack.toString());
			
			while(!stack.isEmpty())
			{
				stack.pop();
			}
			System.out.println();
		}
		
		if(n.rightChild != null)
		{
			inorderCode(n.rightChild);
		}
	}
	
	public void getNode(Node n)
	{
		Node r = tree.root;
		while(r != n)
		{
			if(r.leftChild.name.contains(n.name))
			{
				r = r.leftChild;
				stack.push(0);
			}
			else
			{
				r = r.rightChild;
				stack.push(1);
			}
		}
	}
	
	
	public Node findNode(String s)
	{
		String[] digits = s.split("(?<=.)");
		
		for(int i = digits.length-1; i >= 0; i--)
		{
			stack2.push(digits[i]);
		}
		System.out.println(stack2.toString());
		
		Node r = tree.root;
		while(!stack.isEmpty())
		{
			if(stack2.pop().equals("0"))
				r = r.leftChild;
			else
				r = r.rightChild;
		}
		return r;
	}
}
