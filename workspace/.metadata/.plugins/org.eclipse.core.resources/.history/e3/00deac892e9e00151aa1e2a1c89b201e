import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

@SuppressWarnings("serial")
public class ExitPane extends JPanel implements ActionListener
{
	
	private JFrame f;
	private JButton exit = new JButton("Exit");
	private JButton reLaunch = new JButton("Re-Launch");
	private JLabel label = new JLabel("Thank You For Using eMenu");
	
	public ExitPane()
	{
		f = new JFrame("Thank You");
		f.setSize(400, 300);
		f.setVisible(true);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JPanel p = new JPanel();
		p.setLayout(new BorderLayout());
		
		JPanel grid = new JPanel();
		grid.setLayout(new GridLayout(2, 1));
		
		grid.add(exit);
		grid.add(reLaunch);
		
		p.add(label, BorderLayout.CENTER);
		p.add(grid, BorderLayout.SOUTH);
		
		exit.addActionListener(this);
		reLaunch.addActionListener(this);
		
		f.add(p);
	}
	
	public void actionPerformed(ActionEvent j)
	{
		if(j.getSource() == exit)
		{
			System.exit(0);
		}
		if(j.getSource() == reLaunch)
		{
			new LogiMenu();
			f.dispose();
		}
	}
}
