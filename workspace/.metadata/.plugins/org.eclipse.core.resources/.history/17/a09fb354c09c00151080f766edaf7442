import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class LoginMenu extends JPanel implements ActionListener
{
	JButton login = new JButton("Staff Login");
	public StaffLogin log;
	private JFrame f;
	
	public LoginMenu()
	{
		f = new JFrame("Login");
		f.setVisible(true);
		f.setSize(1600, 900);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		BorderLayout blay = new BorderLayout();
		JPanel p = new JPanel();
		p.setBackground(Main.bGroundColor);
		p.setLayout(blay);
		p.add(login, BorderLayout.CENTER);
		login.addActionListener(this);
	
		
		
		f.add(p);
	}
	
	
	public void actionPerformed(ActionEvent a)
	{
		if(a.getSource() == login)
		{
			new StaffLogin();
			f.dispose();
		}
	}
}
