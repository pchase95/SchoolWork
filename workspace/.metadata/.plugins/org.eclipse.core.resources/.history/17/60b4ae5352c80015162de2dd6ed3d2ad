import java.awt.Color;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Scanner;

public class Main
{
	public static ArrayList<Person> People = new ArrayList<Person>();
	
	public static Color bkgr_color = new Color(195, 238, 253);
	
	public static String userName = System.getProperty("user.name");
	public static File path = new File("C:\\Users\\" + userName + "\\Desktop\\Contacts");
	public static File file = new File("C:\\Users\\" + userName + "\\Desktop\\Contacts/Contacts.txt");
	private static Person person;
	
	
	public static void main(String[] args)
	{
		path.mkdir();
		new Manager();
	}
	
	
	public static void writeFile()
	{
		try
		{
			PrintWriter writer = new PrintWriter(file);
			for(int i = 0; i < People.size(); i++)
			{
				writer.println(People.get(i).getName() + "; " + People.get(i).getGender() + "; " + People.get(i).getAge() +
							People.get(i).getPhone() + "; " + People.get(i).getWork() + "; " + People.get(i).getEmail() +
							People.get(i).getWebsite() + "; " + People.get(i).getAddress() + "; " + People.get(i).getComment());
			}
			writer.close();
		}
		catch(FileNotFoundException e)
		{
			e.printStackTrace();
		}
	}
	
	public static void readFile()
	{
		try
		{
			String line = "";
			if(file.exists())
			{
				@SuppressWarnings("resource")
				Scanner reader = new Scanner(file);
				while(reader.hasNextLine())
				{
					line = reader.nextLine();
					String[] part = line.split("; ");
					person = new Person();
					person.setName(part[0]);
					if(part[1].equals("MALE"))
						person.setGender(Gender.MALE);
					if(part[1].equals("FEMALE"))
						person.setGender(Gender.FEMALE);
					person.setAge(Integer.parseInt(part[2]));
					person.setPhone(part[3]);
					person.setWork(part[4]);
					person.setEmail(part[5]);
					person.setWebsite(part[6]);
					person.setAddress(part[7]);
					person.setComment(part[8]);
					
					People.add(person);
				}
			}
		}
		catch(FileNotFoundException e)
		{
			e.printStackTrace();
		}
	}
}
