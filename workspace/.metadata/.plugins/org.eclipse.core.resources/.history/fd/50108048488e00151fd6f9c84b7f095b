import javax.swing.*;
import java.awt.event.*;
import java.awt.*;

public class GUI extends JPanel
{
	private JFrame f;
	private JPanel p = new JPanel();;
	private JButton add = new JButton("Add");
	private JButton remove;
	private JButton view;
	private JTextField tField;
	
	public GUI()
	{
		BorderLayout layout = new BorderLayout();
		GridLayout glay = new GridLayout();
		
		setLayout(layout);
		
		f = new JFrame("StuffStore");
		f.setVisible(true);
		f.setSize(600, 400);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		f.add(p);
		p.setBackground(Color.WHITE);
		
		
		p.add(add, BorderLayout.NORTH);
		p.add(remove = new JButton("Remove"), BorderLayout.NORTH);
		p.add(view = new JButton("View"), BorderLayout.NORTH);
		
		
		tField = new JTextField("What would you like to do?");
		tField.setColumns(15);
		tField.setEditable(false);
		p.add(tField, BorderLayout.WEST);
	}
	
	
	
}

