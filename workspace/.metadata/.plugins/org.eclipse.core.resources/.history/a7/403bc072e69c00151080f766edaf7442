import javax.swing.*;
import javax.swing.event.*;
import java.awt.*;
import java.awt.event.*;
import java.io.IOException;

@SuppressWarnings("serial")
public class StaffMenu extends JPanel implements ActionListener
{
	private JFrame f;
	private JButton add = new JButton("Add");
	private JButton edit = new JButton("Edit");
	private JButton delete = new JButton("Delete");
	private JButton refresh = new JButton("Refresh");
	private JScrollPane pane1;
	
	String[]names;
	private JList<Item> list;
	
	public StaffMenu()
	{
		f = new JFrame("Staff Menu");
		f.setVisible(true);
		f.setSize(1600, 900);
		f.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		
		JPanel p = new JPanel();
		p.setBackground(Main.bGroundColor);
		BorderLayout blay = new BorderLayout();
		p.setLayout(blay);
		
		GridLayout glay = new GridLayout(1, 4);
		JPanel g = new JPanel();
		g.setLayout(glay);
		g.add(add);
		g.add(edit);
		g.add(delete);
		g.add(refresh);
		
		GridLayout glay2 = new GridLayout(1, 2);
		JPanel g2 = new JPanel();
		g2.setLayout(glay2);
		
		/*names = new String[Main.items.size()];
		for(int i = 0; i < names.length; i++)
			names[i] = Main.items.get(i).getName();*/
		
		list = new JList<>();
		DefaultListModel<Item> = new DefaultListModel<>();
		list.setSelectionMode(ListSelectionModel.SINGLE_SELECTION);

		
		pane1 = new JScrollPane(list);
		g2.add(pane1);
		p.add(g2, BorderLayout.CENTER);
		p.add(g, BorderLayout.NORTH);
		
		add.addActionListener(this);
		edit.addActionListener(this);
		delete.addActionListener(this);
		refresh.addActionListener(this);
		
		
		f.add(p);
	}

	
	public void actionPerformed(ActionEvent c)
	{
		if(c.getSource() == add)
		{
			new AddPane();
		}
		
		if(c.getSource() == refresh)
		{
			try
			{
				Main.refreshList();
				Main.readFile();
				new StaffMenu();
				f.dispose();
			}
			catch (IOException e)
			{
				System.out.println("File not found");
			}
		}
	}
}
