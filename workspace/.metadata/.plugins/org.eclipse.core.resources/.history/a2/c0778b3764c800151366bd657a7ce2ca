//Here's the class for a tabbed JPanel displaying various details.

import java.awt.*;
import javax.swing.*;

public class Tab extends JPanel
{
    //the tabs containing contact info and personal info, respectively
    private JPanel conTab = new JPanel(); 
    private JPanel perTab= new JPanel();
    //layouts for the contact info and personal info tabs
    private GridLayout conLayout = new GridLayout(4, 1);
    private GridLayout perLayout = new GridLayout(3, 1);
    private JTabbedPane tabbedPane = new JTabbedPane();        
    private JLabel phone,email, address, website, gender, age, comment;           
    
    public Tab(Person per)
    {
		try
		{
			UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
        conTab.setLayout(conLayout);
        perTab.setLayout(perLayout);
        phone=new JLabel(per.getPhone());
        email=new JLabel(per.getEmail());
        address=new JLabel (per.getAddress());
        website = new JLabel (per.getWebsite());
        gender=new JLabel(per.getGender().toString());
        age=new JLabel(Integer.toString(per.getAge()));
        comment = new JLabel(per.getComment());
    
        conTab.add(phone);
        conTab.add(email);
        conTab.add(address);
        conTab.add(website);
        
        perTab.add(gender);
        perTab.add(age);
        perTab.add(comment);
        
        tabbedPane.add("Contact", conTab);
        tabbedPane.add("Personal", perTab);
        
        add(tabbedPane);
    }    
}