import java.awt.Color;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.ObjectOutputStream;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Scanner;

public class Main
{
	public static ArrayList<Person> People = new ArrayList<Person>();
	
	public static Color bkgr_color = new Color(195, 238, 253);
	
	public static String userName = System.getProperty("user.name");
	public static File path = new File("C:\\Users\\" + userName + "\\Desktop\\Contacts");
	public static String file_name = "C:\\Users\\" + userName + "\\Desktop\\Contacts/Contacts.txt";
	public static File file = new File(file_name);
	private static Person person;
	
	
	public static void main(String[] args)
	{
		path.mkdir();
		new Manager();
	}
	
	
	public static void writeFile()
	{
        try
        {
            FileOutputStream fout = new FileOutputStream(fileName);
            ObjectOutputStream oos = new ObjectOutputStream(fout);
            oos.writeObject();
            fout.close();
        }
        catch(Exception e)
        {
            e.printStackTrace();
        }
	}
	
	public static void readFile()
	{
		try
		{
			String line = "";
			if(file.exists())
			{
				@SuppressWarnings("resource")
				Scanner reader = new Scanner(file);
				while(reader.hasNextLine())
				{
					line = reader.nextLine();
					String[] part = line.split("; ");
					person = new Person();
					person.setName(part[0]);
					if(part[1].equals("MALE"))
						person.setGender(Gender.MALE);
					if(part[1].equals("FEMALE"))
						person.setGender(Gender.FEMALE);
					person.setAge(Integer.parseInt(part[2]));
					person.setPhone(part[3]);
					person.setWork(part[4]);
					person.setEmail(part[5]);
					person.setWebsite(part[6]);
					person.setAddress(part[7]);
					person.setComment(part[8]);
					
					People.add(person);
				}
			}
		}
		catch(FileNotFoundException e)
		{
			e.printStackTrace();
		}
	}
}
