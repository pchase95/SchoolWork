import javax.swing.*;
import java.awt.event.*;
import java.awt.*;

public class GUI extends JPanel
{
	private JFrame f;
	private JPanel p = new JPanel();;
	private JButton add = new JButton("Add");
	private JButton remove = new JButton("Remove");
	private JButton view = new JButton("View");
	private JLabel tField = new JLabel("What would you like to do?");
	
	public GUI()
	{
		BorderLayout layout = new BorderLayout();
		GridLayout glay = new GridLayout(1, 3);
		GridLayout glay2 = new GridLayout(2, 2);
		JPanel grid = new JPanel();
		grid.setLayout(glay);
		JPanel grid2 = new JPanel();
		grid2.setLayout(glay2);
		
		p.setLayout(layout);
		
		f = new JFrame("StuffStore");
		f.setVisible(true);
		f.setSize(600, 400);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		f.add(p);
		p.setBackground(Color.WHITE);
		
		
		grid.add(add);
		grid.add(remove);
		grid.add(view);
		
		grid2.add(grid);
		grid2.add(tField);
		
		p.add(grid, BorderLayout.NORTH);
	}
	
	
	
}

